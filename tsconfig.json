{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",

    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.*",
        "**/*.d.ts",
        "*.d.ts",
    ],
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "help": false,
        "jsx": true,
        "readme": "./readme.md",
        "theme": "default",
        "ignoreCompilerErrors": true,
        "excludePrivate": true,
        "excludeNotExported": true,
        "target": "ES5",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "stripInternal": true,
        "hideGenerator": true,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "disableOutputCheck": true,
        "includes": "./api",
        "media": "./media"

    }

}