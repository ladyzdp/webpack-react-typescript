{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "target": "es5",
        "rootDir": "./src",
        "lib": ["es5", "es6", "dom"],
        "outDir": "dist",
        "jsx": "react"
    },
    "include": ["./src/**/*"],
    "exclude": [
        "src/**/*.spec.*",
        "**/*.d.ts",
        "*.d.ts"
    ],
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "help": false,
        "jsx": true,
        "readme": "./READMD.md",
        "theme": "default",
        "ignoreCompilerErrors": true,
        "excludePrivate": true,
        "excludeNotExported": true,
        "target": "ES5",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "stripInternal": true,
        "hideGenerator": true,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "disableOutputCheck": true,
        "includes": "./api"
    }

}