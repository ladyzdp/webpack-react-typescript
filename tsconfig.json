{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs":true,
        "target": "es5",
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.*",
        "**/*.d.ts",
        "*.d.ts",
    ]


}